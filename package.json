{
  "name": "vibetrees",
  "version": "0.1.0",
  "type": "module",
  "description": "Manage multiple git worktrees with AI agents and isolated containers",
  "scripts": {
    "web": "node scripts/worktree-web/server.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "orchestrator": "./scripts/start-orchestrator.sh",
    "orchestrator:test": "cd scripts/orchestrator && npm test"
  },
  "keywords": [
    "git",
    "worktree",
    "tmux",
    "docker",
    "ai",
    "claude",
    "development"
  ],
  "devDependencies": {
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "express": "^4.18.0",
    "ws": "^8.14.0",
    "node-pty": "^1.0.0"
  }
}
